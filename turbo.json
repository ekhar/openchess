{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "target/**", "pkg/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.rs", "Cargo.toml"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "wasm:build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.rs", "Cargo.toml"],
      "outputs": ["pkg/**"]
    }
  }
}
