{
  "name": "@openchess/supabase-edge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "mkdir -p shared",
    "build": "pnpm run copy-wasm",
    "copy-chess-compression-wasm": "cp -r ../../packages/chess-compression-wasm/pkg/deno/* shared/chess-compression-wasm/",
    "copy-chesspgn-extractor": "cp -r ../../packages/chesspgn-extractor/pkg/deno/* shared/chesspgn-extractor/",
    "copy-wasm": "pnpm run copy-chess-compression-wasm && pnpm run copy-chesspgn-extractor",
    "deploy": "supabase functions deploy"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "@openchess/chess-compression-wasm": "workspace:*"
  },
  "devDependencies": {
    "supabase": "^2.15.8"
  }
}
