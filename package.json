{
  "name": "openchess",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/databases",
    "packages/databases/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate:chess-games": "turbo run db:migrate --filter=databases -- chess-games",
    "db:migrate:supabase": "turbo run db:migrate --filter=databases -- supabase",
    "db:create:chess-games": "turbo run db:create --filter=databases -- chess-games",
    "db:create:supabase": "turbo run db:create --filter=databases -- supabase",
    "db:revert:chess-games": "turbo run db:revert --filter=databases -- chess-games",
    "db:revert:supabase": "turbo run db:revert --filter=databases -- supabase"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "^2.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@9.7.1"
}
