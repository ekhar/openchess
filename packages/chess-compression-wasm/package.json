{
  "name": "@openchess/chess-compression-wasm",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "build:client": "wasm-pack build ../chess-compression --no-pack --target web --out-dir ../chess-compression-wasm/pkg/web --release --verbose && rm -f pkg/web/.gitignore",
    "build:server": "wasm-pack build ../chess-compression --no-pack --target deno --out-dir ../chess-compression-wasm/pkg/deno --release --verbose",
    "build:wasm": "pnpm run build:client && pnpm run build:server",
    "build": "if [ \"$VERCEL\" = \"1\" ]; then echo \"Skipping WASM compilation on Vercel\"; else pnpm run build:wasm; fi",
    "test": "wasm-pack test --deno ../chess-compression"
  },
  "files": [
    "pkg/deno",
    "pkg/web"
  ],
  "main": "pkg/deno/chess_compression.js",
  "browser": "pkg/web/chess_compression.js",
  "types": "pkg/web/chess_compression.d.ts",
  "sideEffects": [
    "pkg/deno/*.js",
    "pkg/web/*.js"
  ]
}
